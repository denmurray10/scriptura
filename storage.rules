rules_version = '2';

// By default, deny all reads and writes
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the following directories
    match /{path=**}/covers/{allPaths=**} {
      allow read;
    }
    match /{path=**}/maps/{allPaths=**} {
      allow read;
    }
    match /{path=**}/scene-images/{allPaths=**} {
      allow read;
    }
    match /{path=**}/character-images/{allPaths=**} {
      allow read;
    }
     match /{path=**}/dev-uploads/{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to specific paths
    match /{path=**} {
        allow write: if request.auth != null;
    }
  }
}
